{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": false,
		"experimentalDecorators": true,
		"declaration": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
    "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noFallthroughCasesInSwitch": true,
    "inlineSources": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,

    "newLine": "lf",

    // "noEmitOnError": true,

    "typeRoots": [
			"typings"
		],
	},
}